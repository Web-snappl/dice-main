# ======================
# API Server Configuration
# ======================
PORT=3000
NODE_ENV=development

# ======================
# Database
# ======================
MONGO_URI=mongodb+srv://your_user:your_password@your-cluster.mongodb.net/dice-game?retryWrites=true&w=majority

# ======================
# Authentication Secrets
# ======================
# IMPORTANT: Change these in production!
JWT_SECRET=your_jwt_secret_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Legacy password encryption (for migration)
CRYPTOGRAPHY_SECRET=your_cryptography_secret_change_in_production

# ======================
# External Services
# ======================
STRIPE_SECRET_KEY=sk_test_placeholder
KKIAPAY_PUBLIC_KEY=pk_test_placeholder
KKIAPAY_PRIVATE_KEY=sk_test_placeholder
KKIAPAY_SECRET_KEY=secret_test_placeholder
KKIAPAY_SANDBOX=true
KKIAPAY_CURRENCY=XOF
KKIAPAY_REQUIRE_REFERENCE_MATCH=true
# Secret configured in Kkiapay dashboard webhook settings (sent via x-kkiapay-secret)
KKIAPAY_WEBHOOK_SECRET=change_me

