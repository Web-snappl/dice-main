{
  "dependencies": {
    "@nestjs/mapped-types": "*"
  },
  "name": "dice-game",
  "version": "1.1.0",
  "description": "NestJS React Monorepo Template with pnpm workspaces and Turborepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "turbo build",
    "build:prod": "pnpm build --filter=web-client && pnpm build --filter=api",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "format": "turbo format",
    "start": "pnpm --filter=api start",
    "serve:client": "pnpm --filter=web-client preview",
    "deploy:prod": "pnpm prisma:migrate:deploy && pnpm build:prod && pnpm start",
    "preview:full": "pnpm build:prod && concurrently \"pnpm serve:client\" \"pnpm start\"",
    "prisma:generate": "pnpm --filter=api prisma:generate",
    "prisma:push": "pnpm --filter=api prisma:push",
    "prisma:migrate": "pnpm --filter=api prisma:migrate",
    "prisma:migrate:deploy": "pnpm --filter=api prisma:migrate:deploy",
    "prisma:migrate:reset": "pnpm --filter=api prisma:migrate:reset",
    "prisma:migrate:status": "pnpm --filter=api prisma:migrate:status",
    "prisma:studio": "pnpm --filter=api prisma:studio",
    "prisma:seed": "pnpm --filter=api prisma:seed",
    "prisma:format": "pnpm --filter=api prisma:format",
    "prisma:validate": "pnpm --filter=api prisma:validate",
    "prisma:introspect": "pnpm --filter=api prisma:introspect"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "dotenv-cli": "^10.0.0",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=18"
  }
}